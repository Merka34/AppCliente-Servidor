@model ClientVuelos.Models.Registro
@{
    ViewData["Title"] = "Eliminar";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/estilos.css" rel="stylesheet" type="text/css">
    <script src="alert.js" type="text/javascript">
    </script>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vuelos</title>
</head>
<body>
    <header>
        <h1>Vuelos Cliente Web</h1>
        <a id="btnAtras" href="~/">Volver</a>
    </header>
    <h2>Eliminar Vuelo @Model.Vuelo</h2>

        <form action="~/" method="post">
            <label>¿Estas seguro de eliminar el vuelo @(Model.Vuelo)?</label>
            <input hidden type="text" name="hora" value="@Model.Hora" />
            <input hidden type="text" name="destino" value="@Model.Destino" />
            <input hidden type="text" name="vuelo" value="@Model.Vuelo" />
            <input hidden type="text" name="estado" value="@Model.Estado" />
            <input hidden type="text" name="type" value="DELETE" />
            <input type="submit" id="btndel" value="Si" />
            <input type="button" onclick="regresar()" id="btndel2" href="~/" value="No"/>
        </form>

</body>
<foot>
    <script>
        function regresar() {
            window.history.back();
        }
    </script>
</foot>
</html>
